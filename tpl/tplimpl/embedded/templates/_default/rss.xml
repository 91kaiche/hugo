{{- $pctx := cond .IsHome .Site . -}}
{{- $pages := cond (or .IsHome .IsSection) $pctx.RegularPages $pctx.Pages -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- end -}}
{{- $anthor := "" -}}
{{- with .Site.Author -}}
  {{- $anthor = .email -}}
  {{- if and .email .name -}}
    {{- $anthor = printf "%s (%s)" .email .name -}}
  {{- end -}}
{{- end -}}
{{ `<?xml version="1.0" encoding="utf-8" standalone="yes"?>` | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ cond (eq .Title .Site.Title) .Site.Title (print .Title " on " .Site.Title) }}</title>
    <link>{{ .Permalink }}</link>
    <description>Recent content {{ cond (ne .Title .Site.Title) (print "in " .Title) (print "on " .Site.Title) }}</description>
    <generator>Hugo -- gohugo.io</generator>
    {{- with .Site.LanguageCode }}
    <language>{{ . }}</language>
    {{- end }}
    {{- with $anthor }}
    <managingEditor>{{ $anthor }}</managingEditor>
    <webMaster>{{ $anthor }}</webMaster>
    {{- end }}
    {{- with .Site.Copyright }}
    <copyright>{{ . }}</copyright>
    {{- end }}
    {{- with .Date }}
    <lastBuildDate>{{ .Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{- end }}
    {{- with .OutputFormats.Get "RSS" -}}
    <atom:link href="{{ .Permalink }}" rel="self" type="{{ .MediaType }}" />
    {{- end -}}
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      {{- with .Date }}
      <pubDate>{{ .Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{- end }}
      {{- with $anthor }}
      <author>{{ $anthor }}</author>
      {{- end }}
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | safeHTML }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
